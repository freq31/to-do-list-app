<link type="text/css" rel="stylesheet" href="/css/home.css">

<div id="display_tasks">
    
    <h1><i class="fas fa-clipboard-list"></i>&nbsp;<%=title1%>:&emsp;<a href="/add-task"><i class="fas fa-plus-square"></i></a></h1>
    <ul id="task-list">
        
        <%for (let i of taskList){%>
            <li>
                <div id="task-details">
                    <div id="task-description">
                        <div id="tasks">
                            <span class="Task">Task Description:<%= i.task%></span>
                            <span class="Category">Category:<%= i.category%></span>
                        </div>
                        <div id="due-date-time">
                            <span class="Time">Time:<%= i.time%></span>
                            <span class="Date">Date:<%= i.date%></span>
                        </div>
                    </div>
                    
                    <div id="delete-icon">
                        <a href="/delete-task/?id=<%= i._id %>"><i class="fas fa-window-close"></i></a>
                    </div>
                </div>
                
                
            </li>
            
            <%}%>

    </ul>

</div>


       